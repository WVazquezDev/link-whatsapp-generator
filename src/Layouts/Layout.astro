---
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";

import "@fontsource-variable/onest";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/LinkZapWV_Icon.png" />
    <link rel="icon" href="/icon_LinkZapWV.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative min-h-screen">
    <div
      class="absolute inset-0 -z-10 min-h-full w-full bg-white [background:radial-gradient(125%_125%_at_50%_10%,#fff_40%,#25D366_100%)]"
    >
    </div>
    <Navbar />
    <main class="max-w-5xl mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    font-family:
      "Onest Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
